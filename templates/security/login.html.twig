{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="max-w-md h-[100vh] mx-auto mt-10 bg-white p-8 border border-gray-200 rounded-lg shadow-lg">
    <form method="post" class="">
        {% if error %}
            <div class="text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3 text-center">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-blue-500 hover:text-blue-700">Logout</a>
            </div>
        {% endif %}

        <h1 class="text-lg font-semibold text-center">Se connecter</h1>
        <div class="flex justify-center">
            <div class=" w-1/2">
                <label for="inputEmail" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" autocomplete="email" required autofocus>
            </div>
        </div>
        <div class="flex justify-center">
            <div class=" w-1/2">
                <label for="inputPassword" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" name="password" id="inputPassword" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" autocomplete="current-password" required>
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="flex items-center justify-center">
            <div class=" w-1/2 flex justify-between items-center">
                <label class="flex items-center">
                    <input id="remember_me" name="_remember_me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                    <span class="ml-2 text-sm text-gray-900"> Remember me</span>
                </label>
            </div>
        </div>

        <div class="flex justify-center mt-4">
            <div class=" w-1/2">
                <button class="w-full flex justify-center  py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-500 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" type="submit">
                    Se connecter
                </button>
            </div>
        </div>
    </form>
</div>
{% endblock %}


